<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:divider="@drawable/empty_tall_divider"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context="com.e_tickets.e_ticketingsystem.PoliceTicketActivty">





    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:id="@+id/policeimg"
        android:src="@drawable/policeimg"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter commuter TRN"
        android:layout_margin="10dp"
        android:textColorHint="@color/maroon"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/policeimg"
        android:id="@+id/TRN"
        />
    <TextView
        android:layout_margin="10dp"
        android:visibility="gone"
        android:background="@drawable/rounded_corner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TRN"
        android:textColor="@color/maroon"
        android:text="First name"
        android:id="@+id/fname"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TRN"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/maroon"
        android:text="Last name"
        android:id="@+id/lname"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/fname"
        android:text="Email to be generated here"
        android:textColor="@color/maroon"
        android:id="@+id/Email"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Gender to be entered here"
        android:id="@+id/gender"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/Email"
        android:textColor="@color/maroon"
        />

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:textColor="@color/maroon"
        android:layout_below="@+id/gender"
        android:text="License Plate number to be entered here"
        android:background="@drawable/rounded_corner"
        android:id="@+id/licensePlnum"
        />


    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter street name currently located"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/licensePlnum"
        android:textColorHint="@color/maroon"
        android:id="@+id/Streetname"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Offense fee due:"
        android:id="@+id/Fee"
        android:visibility="gone"
        android:textColorHint="@color/maroon"
        android:drawableLeft="@drawable/dollarsigns"
        android:background="@drawable/rounded_corner"
        android:layout_below="@id/Streetname"
        />


    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Fee"
        android:id="@+id/Enter"
        android:onClick="EnterClicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Location"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Enter"
        android:id="@+id/Location"
        android:onClick="LocationClicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue Ticket"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Location"
        android:onClick="TicketClicked"
        />




</RelativeLayout>






